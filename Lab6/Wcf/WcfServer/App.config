<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.7.2" />
  </startup>
	<system.serviceModel>
		<behaviors>
			<serviceBehaviors>
				<behavior name="mexBehaviour">
					<serviceMetadata httpGetEnabled="true" />
				</behavior>
			</serviceBehaviors>
		</behaviors>
		<services>
			<service name="WcfServer.FileService" behaviorConfiguration="mexBehaviour">
				<endpoint address="FileService" binding="basicHttpBinding" contract="WcfServer.IFileService">
				</endpoint>
				<endpoint address="FileService" binding="netTcpBinding" contract="WcfServer.IFileService">
				</endpoint>
				<endpoint address="mex" binding="mexHttpBinding" contract="IMetadataExchange" />
				<host>
					<baseAddresses>
						<add baseAddress="http://localhost:9999/FileService" />
						<add baseAddress="net.tcp://localhost:9998/FileService" />
					</baseAddresses>
				</host>
			</service>
		</services>
	</system.serviceModel>
</configuration>